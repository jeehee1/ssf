<%- layout('layouts/boilerplate') %>
<div
  class="shadow p-3 mt-5 mx-auto bg-body rounded col-sm-10 col-md-6 col-xl-4"
>
<h1>회원가입</h1>
  <form action="/register" method="POST" class="needs-validation" novalidate>
    <div class="my-3">
      <label class="form-label" for="username">아이디</label>
      <input
        class="form-control"
        type="text"
        id="username"
        name="username"
        required
      />
    </div>
    <div class="my-3">
      <label class="form-label" for="email">이메일</label>
      <input
        class="form-control"
        type="text"
        id="email"
        name="email"
        required
      />
    </div>
    <div class="my-3">
      <label class="form-label" for="password">비밀번호</label>
      <input
        class="form-control"
        type="text"
        id="password"
        name="password"
        required
      />
    </div>
    <div>
      <button type="submit" class="my-3 btn btn-success">가입하기</button>
    </div>
  </form>
</div>
