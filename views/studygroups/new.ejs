<% layout('layouts/boilerplate') -%>
    <h1>스터디그룹 만들기</h1>
    <form action="/studygroups" method="POST">
      <div>
        <label for="title">스터디 이름</label>
        <input type="text" id="title" name="studygroup[title]" />
      </div>
      <div>
        <label for="capacity">정원</label>
        <input type="number" id="capacity" name="studygroup[capacity]" />
      </div>
      <div>
        <label for="subject">과목</label>
        <input type="text" id="subject" name="studygroup[subject]" />
      </div>
      <div>
        <label for="location">위치</label>
        <input type="text" id="location" name="studygroup[location]" />
      </div>
      <button>저장</button>
    </form>
