<% layout('layouts/boilerplate') -%>
<h1>StudyGroup Lists</h1>
<a href="/studygroups/new">스터디그룹 만들기</a>
<ul>
  <div class="container">
    <div class="row">
      <% for(const group of studygroups){ %>
        <div class="card text-dark bg-light m-3 col-md-5">
          <div class="row">
            <div class="col-md-7">
              <img class="img-fluid" src="<%=group.image %>" />
            </div>
            <div class="col-md-5">
              <div class="card-body">
                <h5 class="card-title"><%= group.title %></h5>
                <p class="card-text">
                  <small class="text-muted"
                    ><%= group.participants.length %>/<%=group.capacity
                    %></small
                  >
                </p>
                <p class="card-text text-truncat"><%= group.subject %></p>
                <a href="/studygroups/<%= group._id %>">상세정보</a>
              </div>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</ul>
